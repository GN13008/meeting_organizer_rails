<div class="content">
  <br>
  <h1>Voici les cr√©neaux disponibles </h1>
  <br>
  <% @days.each do |day| %>
    <br>
    <%= day.date %>
    <hr>
    <div class="cards">
    <% day.slots.where("nb_agent > 0").order(id: :asc).each do |slot| %>
      <div class="card">
        <p><%= slot.time_slot %></p>
        <p><%= link_to "Selectionner (#{slot.nb_agent})", slot_bookings_path(slot), method: :post %></p>
      </div>
    <% end %>
    </div>
    <hr>
  <% end %>
</div>